{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"$id":"datatype-json",
	"required": [
		"title",
		"$id",
		"meta:altId",
		"meta:intendedToExtend",
		"meta:resourceType"
	],
	"properties":{
		"$id": {"type":"string"},
		"meta:altId": {"type":"string"},
		"title": {"type":"string"},
		"description": {"type":"string"},
		"meta:resourceType": {
			"type": "string",
			"const": "datatypes"
		},
		"meta:extends": {
		"type": "array"
		},
		"meta:tenantNamespace":{
			"type": "array"
		},
		"meta:intendedToExtend": {
			"type": "array"
		},
		"version": "string",
		"definitions":{
			"type":"object",
			"$ref":"#/$defs"
		},
		"properties": {
			"type": "object",
			"$ref":"#/defs"
		},
		"additionalProperties":true
	},
	"allOf": [{
		"type": "array",
		"items": {
			"type": "object",
			"properties": {
				"$ref": {
					"type": "string"
				},
				"type": {
					"type": "string"
				}
			}
		}
	}],
    "$defs":{
        "propertyNames":{
            "pattern":"[A-Za-z0-9_]"
        },
		"type": "object",
		"description": "A field definition that can represent object, array, or primitive.",
		"properties": {
			"properties": {
				"$ref": "#/$defs",
				"additionalProperties": true
			},
			"type": {
				"type": "string",
				"enum": [
					"object",
					"array",
					"string",
					"number",
					"integer",
					"boolean",
					"date",
					"date-time",
					"null"
				]
			},
			"title": {
				"type": "string"
			},
			"description": {
				"type": "string"
			},
			"minimum": {
				"type": "number"
			},
			"maximum": {
				"type": "number"
			},
			"minLength": {
				"type": "number"
			},
			"exclusiveMinimum": {
				"type": "number"
			},
			"exclusiveMaximum": {
				"type": "number"
			},
			"maxLength": {
				"type": "number"
			},
			"minItems": {
				"type": "number"
			},
			"maxItems": {
				"type": "number"
			},
			"uniqueItems": {
				"type": "boolean"
			},
			"default": {

			},
			"mapFieldType": {
				"type": "string"
			},
			"format": {
				"type": "string"
			},
			"pattern": {
				"type": "string"
			},
			"enum": {
				"type": "array",
				"items": {
					"type": "string"
				}
			},
			"isRequired": {
				"type": "boolean"
			},
			"required": {
				"type": "array",
				"items": {
					"type": "string"
				}
			},
			"meta:xdmType": {
				"type": "string"
			},
			"meta:status": {
				"type": "string"
			},
			"meta:enum": {
				"type": "object",
				"additionalProperties": true
			},
			"meta:ui": {
				"type": "object",
				"additionalProperties": true
			},
			"meta:referencedFrom": {
				"type": "string"
			},
			"meta:xdmField": {
				"type": "string"
			},
			"meta:immutable": {
				"type": "boolean"
			},
			"meta:usereditable": {
				"type": "boolean"
			},
			"meta:sourceSchema": {
				"type": "array"
			},
			"meta:xedConverted": {
				"type": "boolean"
			},
			"items": {
				"$ref": "#/$defs/"
			},
			"note": {
				"type": "string"
			},
			"$ref":{
				"type":"string"
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}
